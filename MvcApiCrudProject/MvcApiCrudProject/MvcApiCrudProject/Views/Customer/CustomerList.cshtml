@model IEnumerable<MvcApiCrudProject.Models.MvcCustomerModel>

@{
    ViewBag.Title = "CustomerList";
}

@Html.ActionLink("Müşteri Ekle", "CustomerUpdateAndAddProcess", null, new {@class="btn btn-danger"})<br /><br />
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Müşteri Tablosu
    </div>
    <div class="card-body">

        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                    <th>Edit / Delete</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                    <th>Edit / Delete</th>
                </tr>
            </tfoot>
            <tbody>
                <tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameSurname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adress)
                        </td>
                        <td>
                            
                            @Html.ActionLink("Güncelle", "CustomerUpdateAndAddProcess", new { id = item.CustomerId }, new { @class = "btn btn-danger" })

                            @Html.ActionLink("Sil ", "CustomerDelete", new { id = item.CustomerId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                        }
               
              
                  
                </tbody>
            </table>
        </div>
    </div>