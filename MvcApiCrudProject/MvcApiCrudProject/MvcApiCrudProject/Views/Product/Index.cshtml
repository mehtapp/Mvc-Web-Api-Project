@model IEnumerable<MvcApiCrudProject.Models.MvcProductModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    @Html.ActionLink("Ürün Ekle", "ProductUpdateAndAddProcess", null, new { @class = "btn btn-danger" })     <br /><br />

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Ürünler Tablosu
    </div>
    <div class="card-body">

        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Categori No</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Ürün</th>
                    <th>Fiyat</th>
                    <th>Categori No</th>
                </tr>
            </tfoot>
            <tbody>
                <tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td>
                            @Html.ActionLink("Güncelle", "ProductUpdateAndAddProcess", new { id = item.ProductId }, new { @class="btn btn-danger"})
                           
                            @Html.ActionLink("Sil", "ProductDelete", new { id = item.ProductId }, new {@class="btn btn-danger" })
                        </td>
                    </tr>
                }

                  
                </tbody>
            </table>
        </div>
    </div>

