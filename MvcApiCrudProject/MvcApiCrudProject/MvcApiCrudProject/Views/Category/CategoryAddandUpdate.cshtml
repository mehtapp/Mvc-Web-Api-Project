@model MvcApiCrudProject.Models.MvcCategoryModel

@{
    ViewBag.Title = "CategoryAddandUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CategoryId)
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <h5>Kategori İşlem Sayfası </h5>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Kategori Adı
        <div class="col-md-10">
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">                 <br />
            <input type="submit" value="Kaydet" class="btn btn-danger"/> @Html.ActionLink("Geri Dön", "Index", null, new {@class="btn text-danger border-danger"})
        </div>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
